# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=true
separator_block_width=15

align=center
markup=pango
border_top=0
border_bottom=3
border_left=0
border_right=0
color=#eeeeee

#[documentation]
#full_text=Documentation
#website=https://vivien.github.io/i3blocks
#command=xdg-open "$website"
#color=#f12711

[pacman-updates]
command=/home/bayronq/.config/i3blocks/pac-update.py
markup=pango
interval=3600
QUIET=true
WATCH=^linux.* ^pacman.* ^emacs.*
BASE_COLOR=#5fff5f
UPDATE_COLOR=#FFFF85
AUR=true
LABEL= 
signal=3

[spotify]
command=/home/bayronq/.config/i3blocks/spotify.sh
interval=3
markup=pango
color=#1ED760
border=#1ED760

[caps]
command=/home/bayronq/.config/i3blocks/caps.sh
interval=once
color=#ffffff
background=#9f5500
align=center
min_width=80
signal=2

[cpu]
command=/home/bayronq/.config/i3blocks/cpu
interval=persist
markup=pango
color=#dfd932
border=#bfb912
min_width=70
align=right

[memoria]
command=/home/bayronq/.config/i3blocks/memoria.sh
interval=30
color=#52aeff
border=#52aeff

[ip]
#command=hostname -i | awk '{ print "IP:" $1 }'
command=ip addr | grep 172 | awk '{print $2}' | sed 's/\/.*//g'
interval=once
color=#91E78B
border=#91E78B

[volume]
command=/home/bayronq/.config/i3blocks/volume.sh
#LABEL=♪ 
LABEL=VOL 
interval=once
signal=10
color=#ffa252
border=#ff7752
#STEP=5%
#MIXER=[determined automatically]
#SCONTROL=[determined automatically]
#NATURAL_MAPPING=0

[connection]
command=nmcli device wifi list | grep '*' | awk '{print $3}'
interval=once
border=#9F78E1

[greetings]
color=#49ffed
border=#49ffed
command=echo "Hello, $USER!"
interval=once

